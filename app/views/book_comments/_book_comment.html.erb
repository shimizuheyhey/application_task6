<table class='table'>
      <div class="comments">
      <% books.book_comments.each do |book_comment| %>
      <%#コメント一覧%>
      <tr>
        <td><%= attachment_image_tag(books.user, :profile_image,:fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= book_comment.user.name %></td>
        <td><%= book_comment.created_at.strftime('') %><%= book_comment.comment %></td>
        <%#削除%>
        <% if book_comment.user == current_user %>
        <div class="comment-delete">
          <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger edit_book_#{books.id}",remote: true %><td>
        <% end %>
       <% end %>
       </tr>
       </div>
        </div>
        </table>
